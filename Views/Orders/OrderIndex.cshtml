@model List<Order>

@{ 
    ViewData["Title"] = "All Orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all orders</h4>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <td>Items</td>
                    <td>Total</td>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var items in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@items.Amount</span> [@items.Price.ToString("c")]-@items.Movie.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">
                            @order.OrderItems.Select(m=>m.Movie.Price*m.Amount).Sum().ToString("c")
                        </td>
                        <td class="align-middle"></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>